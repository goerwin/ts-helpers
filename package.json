{
  "name": "node-helpers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "version": "2.1.0",
  "description": "",
  "scripts": {
    "build": "npm run test && rm -rf dist && tsc",
    "test": "mocha -r source-map-support/register --compilers ts-node/register src/**/_tests/*.ts",
    "test-coverage": "nyc --all --reporter=html --reporter=text npm run test"
  },
  "author": "Erwin Gaitan O <erwingaitano@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.0",
    "fs-extra": "^3.0.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/fs-extra": "^3.0.3",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.10",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist",
      "src/**/_tests/*.ts",
      "src/index.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
